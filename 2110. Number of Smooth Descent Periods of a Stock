class Solution {
    public long getDescentPeriods(int[] prices) {
        long ans = 0;
        int curLen = 0;
        for(int i = 0; i < prices.length; i++){
            if (i > 0 && prices[i] == prices[i-1] - 1) curLen += 1;
            else curLen = 1;
            ans += curLen;
        }

        return ans;
    }
}
