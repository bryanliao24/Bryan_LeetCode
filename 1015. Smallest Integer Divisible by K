class Solution:
    def smallestRepunitDivByK(self, k: int) -> int:
        # 如果 k 有因子 2 或 5，不可能被全是 1 的数整除
        if k % 2 == 0 or k % 5 == 0:
            return -1

        rem = 0  # 当前 repunit 对 k 的余数
        # 最多需要尝试 k 个长度
        for length in range(1, k + 1):
            rem = (rem * 10 + 1) % k  # 相当于在末尾再加一个 '1'
            if rem == 0:
                return length

        # 理论上不会走到这里（因为已排除 2 和 5 的情况）
        return -1
