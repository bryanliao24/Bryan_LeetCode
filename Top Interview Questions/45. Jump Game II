class Solution:
    def jump(self, nums: List[int]) -> int:
        jumps = 0                 # 跳跃次数
        current_end = 0           # 当前能跳到的最大边界
        farthest = 0              # 下一步最远能跳到哪里

        for i in range(len(nums) - 1):  # 不需要跳到最后，只要跳到倒数第一个
            farthest = max(farthest, i + nums[i])

            if i == current_end:
                jumps += 1
                current_end = farthest

        return jumps
