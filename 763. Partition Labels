class Solution:
    def partitionLabels(self, s: str) -> List[int]:
        # 1. 記錄每個字母最後一次出現的位置
        last = {c: i for i, c in enumerate(s)}

        res = []
        start = 0
        end = 0

        # 2. 往右走，不斷擴張當前區間的 end
        for i, c in enumerate(s):
            end = max(end, last[c])

            # 3. 一旦 i == end，代表可以切一段 partition
            if i == end:
                res.append(end - start + 1)
                start = i + 1   # 下一段的起點

        return res
